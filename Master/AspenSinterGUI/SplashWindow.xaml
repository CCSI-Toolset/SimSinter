<Window x:Class="SinterConfigGUI.SplashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sinter Config GUI" Height="400" Width="500" Icon="Resources/SimSinterIcon.png" WindowStyle="None" AllowsTransparency="True"  WindowStartupLocation="CenterScreen"
        MouseLeftButtonDown="Grid_close">
