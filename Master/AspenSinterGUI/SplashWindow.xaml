            <RowDefinition Height="10" />

        </Grid.RowDefinitions>

        <Image Stretch="Fill" Grid.Column="1" Grid.ColumnSpan="5" Grid.Row="1" Source="/SinterConfigGUI;component/Resources/SimSinterHeader_white.png"/>
        <Border BorderBrush="DodgerBlue" BorderThickness="10" Grid.Column="0" Grid.ColumnSpan="6" Grid.Row="0" Grid.RowSpan="7"/>

                       
            
