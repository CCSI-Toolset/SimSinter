                        <TableColumn Width="100"/>
                        <TableColumn />
                    </Table.Columns>
                    <TableRowGroup>
                        <TableRow>
                            <TableCell>
                                <Paragraph>
                                    Version:
                                </Paragraph>
                            </TableCell>
                            <TableCell>
                                <Paragraph>
                                    2015.10.rc, September 2015
                                </Paragraph>
                            </TableCell>
                        </TableRow>
